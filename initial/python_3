    assert most_letter("AAaooo!!!!") in "ao", "Only letters."
    assert most_letter("abe") in "abe", "The First."
    assert most_letter("'Lorem ipsum dolor sit amet'") in "mo", "Lorem 1."
    # Rank_2
    assert most_letter("'Lorem ipsum dolor sit amet'") == "m", "Lorem 2."
    # Rank_3
    assert most_letter("'Lorem ipsum dolor sit amet'") == "moeilrstadpu", "Lorem 3."
